@model IEnumerable<WebTruyenMVC.Entity.CategoryEntity>
@{
    ViewData["Title"] = "Danh sách thể loại";
}

<h2>Danh sách thể loại</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm thể loại mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên thể loại</th>
            <th style="width:150px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa thể loại này?');">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">Không có thể loại nào.</td>
            </tr>
        }
    </tbody>
</table>