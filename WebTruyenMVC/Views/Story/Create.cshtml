@model WebTruyenMVC.Entity.StoryEntity

@{
    ViewData["Title"] = "Tạo Truyện Mới";
    var authors = ViewBag.Authors as List<WebTruyenMVC.Entity.AuthorEntity> ?? new List<WebTruyenMVC.Entity.AuthorEntity>();
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Tên truyện</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorId">Tác giả</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(authors, "Id", "Name"))">
            <option value="">-- Chọn tác giả --</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh bìa</label>
        <input type="file" name="CoverImageFile" class="form-control" accept="image/*" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="Đang ra">Đang ra</option>
            <option value="Hoàn thành">Hoàn thành</option>
            <option value="Tạm dừng">Tạm dừng</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Tạo mới</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>