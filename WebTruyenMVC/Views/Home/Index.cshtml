@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Slider image: show full image, keep aspect ratio, may have padding */
    #mangaslider .carousel-item img {
        height: 350px;
        object-fit: contain;
        background: #222; /* hoặc màu phù hợp giao diện */
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    /* Card image: show full image, keep aspect ratio, may have padding */
    .card-img-top {
        width: 100%;
        height: 220px;
        object-fit: contain;
        background: #222;
        border-radius: 8px 8px 0 0;
    }
</style>

<!-- end navbar-->
<!-- start slider -->
<div id="mangaslider" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="img/linh_vu_thien_ha.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/mao_son_troc_quy_nhan.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/nhat_niem_vinh_hang.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#mangaslider" role="button" data-slide="prev">
        <div><span class="carousel-control-prev-icon" aria-hidden="true"></span></div>
        <span class="sr-only">Trước</span>
    </a>
    <a class="carousel-control-next" href="#mangaslider" role="button" data-slide="next">
        <div><span class="carousel-control-next-icon" aria-hidden="true"></span></div>
        <span class="sr-only">Sau</span>
    </a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" class="form-control" name="search" value="@ViewBag.SearchKeyword" placeholder="Tìm truyện...">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Tìm</button>
        </div>
    </div>
</form>

<!-- end slider -->
<div class="lastest container mt-4 mt-sm-5">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="font-weight-bolder float-left">Các Truyện Mới Nhất</h2>
            <a class="btn btn-link float-right"
               asp-controller="Story"
               asp-action="Latest">
                Xem thêm &raquo;
            </a>
        </div>
    </div>

    <div class="posts row">
        @foreach (var story in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-4">
                <div class="card mb-3">
                    <a asp-controller="Story" asp-action="DetailStory" asp-route-id="@story.Id">
                        <img src="@story.CoverImage" class="card-img-top" alt="@story.Title">
                    </a>
                    <div class="over text-center">
                        <div class="head text-left">
                            <h6>@story.Title</h6>
                        </div>
                        <div class="about-list">
                            <table class="table table-borderless">
                                <tbody>

                                    <tr>
                                        <th scope="row">Update:</th>
                                        <td>@story.Status</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <p class="about text-muted">Truyện nổi bật</p>
                        <a class="reading btn" asp-controller="Story" asp-action="DetailStory" asp-route-id="@story.Id">Bắt đầu đọc</a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><a href="detailstory.html">@story.Title</a></h5>
                        <p class="card-text">Chương: @story.Status</p>
                        <p class="card-text"><small class="text-muted">Cập nhật @story.Created.ToString("d")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<div class="recommended container mt-5">
    <div class="row align-items-center mb-3">
        <div class="col-lg-6">
            <h2 class="font-weight-bolder d-inline-block mb-0">Truyện Đọc Nhiều</h2>
        </div>
        <div class="col-lg-6 text-right">
            <a class="btn btn-link" asp-controller="Story" asp-action="MostViewed">Xem thêm &raquo;</a>
        </div>
    </div>
    <div class="row justify-content-center">
        @foreach (var story in (List<WebTruyenMVC.Entity.StoryEntity>)ViewBag.Recommended)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 d-flex">
                <div class="card mb-4 flex-fill shadow-sm mostviewed-card">
                    <a asp-controller="Story" asp-action="DetailStory" asp-route-id="@story.Id">
                        <img src="@story.CoverImage" class="card-img-top" alt="@story.Title">
                    </a>
                    <div class="card-body text-center p-2">
                        <h6 class="card-title mb-1 text-truncate" title="@story.Title">@story.Title</h6>
                        <p class="card-text text-muted mb-0" style="font-size:0.95em;">Lượt xem: @story.Views</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .mostviewed-card {
        min-height: 320px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        border-radius: 10px;
        background: #fff;
    }

    .mostviewed-card .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
        background: #222;
        border-radius: 10px 10px 0 0;
    }

    .mostviewed-card .card-title {
        font-size: 1.05em;
        font-weight: 600;
        margin-bottom: 0.5rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .mostviewed-card .card-body {
        padding: 0.75rem 0.5rem 0.5rem 0.5rem;
    }

    @@media (max-width: 991.98px) {
        .mostviewed-card {
            min-height: 300px;
        }
        .mostviewed-card .card-img-top {
            height: 150px;
        }
    }

    @@media (max-width: 767.98px) {
        .mostviewed-card {
            min-height: 260px;
        }
        .mostviewed-card .card-img-top {
            height: 120px;
        }
    }
</style>
