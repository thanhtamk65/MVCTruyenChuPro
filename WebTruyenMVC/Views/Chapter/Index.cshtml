@model IEnumerable<WebTruyenMVC.Entity.ChapterEntity>

@{
    ViewData["Title"] = "Danh sách chương";
    var storyId = ViewBag.StoryId as string;
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-storyId="@storyId" class="btn btn-success mb-3">+ Thêm chương mới</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Truyện này chưa có chương nào.
    </div>
}
else
{
    <div class="list-group">
        @foreach (var chapter in Model)
        {
            <a asp-action="Details" asp-route-id="@chapter.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <strong>Chương @chapter.ChapterNumber:</strong> @chapter.Title
                </div>
                <small class="text-muted">@chapter.Created.ToString("dd/MM/yyyy HH:mm")</small>
            </a>
        }
    </div>
}
