@model WebTruyenMVC.Entity.ChapterEntity

@{
    ViewData["Title"] = "Chi tiết Chương";
}

<h2>@Model.Title</h2>

<p><strong>Số chương:</strong> @Model.ChapterNumber</p>
<p><strong>Ngày đăng:</strong> @Model.Created.ToString("dd/MM/yyyy HH:mm")</p>

<hr />
<div class="chapter-content">
    @Html.Raw(Model.Content.Replace("\n", "<br />"))
</div>

<div class="mt-3">
    @if (ViewBag.PrevChapterId != null)
    {
        <a asp-action="Details" asp-route-id="@ViewBag.PrevChapterId" class="btn btn-primary">Chương trước</a>
    }
    @if (ViewBag.NextChapterId != null)
    {
        <a asp-action="Details" asp-route-id="@ViewBag.NextChapterId" class="btn btn-primary ms-2">Chương sau</a>
    }
    <a asp-action="Index" asp-route-storyId="@Model.StoryId" class="btn btn-secondary ms-2">Quay lại danh sách chương</a>
</div>